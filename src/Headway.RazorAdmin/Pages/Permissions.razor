@page "/permissions"
@inherits PermissionsBase
@using Microsoft.AspNetCore.Components.Forms

<AuthorizeView>
    <!--
    Need to specify the context to avoid clashes with other auto generated contexts
    https://github.com/chanan/BlazorStrap/issues/149 
    -->
    <Authorized Context="authPermissions">
        <h3>Permissions</h3>

        @if (Permissions == null)
        {
            <p><em>Loading permissions...</em></p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Roles</th>
                        <th> 
                            <a href="@($"permissiondetails/")" class="btn btn-primary table-btn">
                                <i class="fas fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var permission in Permissions)
                    {
                        <tr>
                            <td>@permission.PermissionId</td>
                            <td>@permission.Name</td>
                            <td>@permission.Description</td>
                            <td>@string.Join(",", @permission.Roles.Select(r => r.Name).ToList())</td>
                            <td>
                                <a href="@($"permissiondetails/{permission.PermissionId}")" class="btn btn-primary table-btn">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
    <NotAuthorized>
        <p>Please log in.</p>
    </NotAuthorized>
</AuthorizeView>

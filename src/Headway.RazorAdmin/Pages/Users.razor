@page "/users"
@inherits UsersBase

<AuthorizeView>
    <Authorized>
        <h3>Users</h3>

        @if (Users == null)
        {
            <p><em>Loading users...</em></p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>User Id</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Permissions</th>
                        <th> 
                            <button type="button" class="btn btn-small btn-outline-primary fas fa-plus" @onclick="() => AddUser()"/>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Users)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@string.Join(",", @user.Roles.Select(r => r.Name).ToList())</td>
                            <td>@string.Join(",", @user.Permissions.Select(r => r.Name).ToList())</td>
                            <td>
                                <button type="button" class="btn btn-small btn-outline-primary fas fa-edit" @onclick="() => UpdateUser(user.UserId)"/>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
    <NotAuthorized>
        <p>Please log in.</p>
    </NotAuthorized>
</AuthorizeView>
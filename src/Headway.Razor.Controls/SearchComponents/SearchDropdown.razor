@using Headway.Core.Dynamic
@using Headway.Core.Model
@using Microsoft.AspNetCore.Components.Forms
@using System.Reflection
@using System.Linq.Expressions

@inherits SearchDropdownBase

<div class="mb-1">
    <div class="row">
        <div class="col-sm-4 col-form-label">
            @if(string.IsNullOrWhiteSpace(SearchItem.Tooltip))
            {
                @SearchItem.Label                
            }
            else
            {
                <ComponentTip Text="@SearchItem.Tooltip">@SearchItem.Label</ComponentTip>    
            }
        </div>
        <div class="col-sm-8">
            <MudSelect  T="string" Margin="Margin.Dense" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter" MultiSelection="false"
                        @bind-Value="PropertyValue" SelectedValuesChanged="OnValueChanged">
                @if (optionItems != null)
                {
                    @foreach (var optionItem in optionItems)
                    {
                        <MudSelectItem T="string" Value="@optionItem.Id">@optionItem.Display</MudSelectItem>
                    }
                }
            </MudSelect>
        </div>
    </div>
</div>
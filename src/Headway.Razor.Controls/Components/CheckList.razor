@inherits CheckListBase

<div class="container container-body float-start">
	<div class="row">
		<div class="col-sm">
            @if(checklist != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @if(string.IsNullOrWhiteSpace(Field.Tooltip))
                                {
                                    @Field.Label
                                }
                                else
                                {
                                     <MudTooltip Text="@Field.Tooltip" Placement="Placement.Top">@Field.Label</MudTooltip>    
                                }
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var checklistItem in checklist)
                        {
                            <tr>
                                <td>
                                    <MudCheckBox @bind-Checked="checklistItem.IsChecked" style="vertical-align:middle"/> @checklistItem.Name                
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
		</div>
    </div>
</div>
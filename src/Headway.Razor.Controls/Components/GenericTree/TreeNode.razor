@typeparam T where T : class, new()
@inherits TreeNodeBase<T>

<li class="draggable @dropClass" 
    draggable="true" 
    @ondragstart="@(() => HandleDragStart(Node))"
    @ondrop="HandleDrop"
    @ondragenter="HandleDragEnter"
    @ondragleave="HandleDragLeave">
    <div>
        <label class="float-left"/><label class="float-left" @onclick="() => SelectAsync()" draggable="false">@Node.Label</label>
    </div>
    <div class="treenodes">
        <ul class="treenodeslist">
            @foreach (var node in Node.Nodes)
            {
                @RenderTreeNode(node)
            }
        </ul>
    </div>   
</li>
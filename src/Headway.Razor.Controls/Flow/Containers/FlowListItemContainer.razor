@inherits FlowListItemContainerBase

@if (Container.DynamicContainers.Any())
{
    <MudListItem Text="@Container.Label" Value="@Container" InitiallyExpanded="true">
        <NestedList>
            @foreach (var container in Container.DynamicContainers)
            {
                <FlowListItemContainer @key=container.ContainerId Container="container" />
            }
        </NestedList>
    </MudListItem>
}
else
{
    <MudListItem Text="@Container.Label" Value="@Container"/>
}
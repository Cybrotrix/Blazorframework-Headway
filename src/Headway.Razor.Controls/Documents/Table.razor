@using Microsoft.AspNetCore.Components.Forms

@typeparam T where T : class, new()
@inherits TableBase<T>

@if (dynamicList == null)
{
    <Loading Message="Loading..."/>
}
else
{
    <MudTable Items="@dynamicList.DynamicListItems" 
              Hover="true" Dense="true" Striped="true" Breakpoint="Breakpoint.Sm"
              Filter="new Func<DynamicListItem<T>,bool>(FilterFunction)">
        <ToolBarContent>
            <MudText Typo="Typo.h6">@dynamicList.Title</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="filterString" Placeholder="Filter" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.FilterAlt" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>

            @foreach(var column in dynamicList.ConfigItems)
            {
                <MudTh>@column.Label</MudTh>
            }

            <MudTh>
                @if(dynamicList.DynamicSearchComponent != null)
                {
                    <DynamicComponent @key="dynamicList.SearchComonentUniqueId" Type="dynamicList.DynamicSearchComponent" Parameters="dynamicList.SearchParameters" />
                }
                else
                {
                    <MudTooltip Text="Create new" Arrow="true" Placement="Placement.Right">
                        <button type="button" class=@($"btn btn-small borderless btn-outline-primary {headerButtonIcon}") @onclick="() => Add()"/>
                    </MudTooltip>                
                }
        </MudTh>
        </HeaderContent>
        <RowTemplate>

            @foreach(var column in dynamicList.ConfigItems)
            {
                <MudTd DataLabel="@column.Label">@dynamicList.GetValue(@context.Model, column.PropertyName)</MudTd>                            
            }
            
            <MudTd>
                <ComponentTip Text="Edit"><button type="button" class=@($"btn btn-small borderless btn-outline-primary {rowButtonIcon}") @onclick="() => Update(dynamicList.GetValue(context.Model, dynamicList.Config.NavigateProperty))"/></ComponentTip>
            </MudTd>

        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
}
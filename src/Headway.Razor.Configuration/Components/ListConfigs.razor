@inherits ListConfigsBase

@if (listConfigs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>List Config Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>ConfigApi</th>
                <th>Navigate To</th>
                <th>Navigation Property Name</th>
                <th> 
                    <button type="button" class="btn btn-small btn-outline-primary fas fa-plus" @onclick="() => Add()"/>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var listConfig in listConfigs)
            {
                <tr>
                    <td>
                        @listConfig.ListConfigId
                    </td>
                    <td>
                        @listConfig.Name
                    </td>
                    <td>
                        @listConfig.Title
                    </td>
                    <td>
                        @listConfig.ConfigApi
                    </td>
                    <td>
                        @listConfig.NavigateTo
                    </td>
                    <td>
                        @listConfig.NavigationPropertyName
                    </td>
                    <td>
                        <button type="button" class="btn btn-small btn-outline-primary fas fa-edit" @onclick="() => Update(listConfig.ListConfigId)"/>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
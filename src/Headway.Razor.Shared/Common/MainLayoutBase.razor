<div class="page">
    <div class="sidebar">
        <AuthorizeView>
            <Authorized>
                <NavMenu IsAuthorized="true" />
            </Authorized>
            <NotAuthorized>
                <NavMenu IsAuthorized="false" />
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="main">
        <div class="top-row px-4 auth">
            <div class="float-right">
                @LoginDisplayFragment
            </div>
        </div>

        <div class="content px-4">
            @BodyFragment
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment LoginDisplayFragment { get; set; }

    [Parameter]
    public RenderFragment BodyFragment { get; set; }
}
@inherits SearchTextBase

@if(string.IsNullOrWhiteSpace(SearchItem.Tooltip))
{                
    <MudTextField @bind-Value="@PropertyValue"
                Label="@SearchItem.Label"
                OnKeyDown="OnKeyDown"
                Margin="Margin.Dense" 
                Variant="Variant.Text"
                Immediate=true/>
}
else
{
    <MudTooltip Text="@SearchItem.Tooltip" Arrow="true" Placement="Placement.Top">
        <MudTextField @bind-Value="@PropertyValue" 
                    Label="@SearchItem.Label"
                    OnKeyDown="OnKeyDown"
                    Margin="Margin.Dense" 
                    Variant="Variant.Text"
                    Immediate=true/>
    </MudTooltip>    
}
@inherits SearchDropdownBase

@if(string.IsNullOrWhiteSpace(SearchItem.Tooltip))
{
    <MudSelect  T="string" @bind-Value="PropertyValue" Label="@SearchItem.Label"
                Style="@style" SelectedValuesChanged="OnValueChanged"
                Variant="Variant.Text" FullWidth=true Margin="Margin.Dense" 
                AnchorOrigin="Origin.BottomCenter" MultiSelection="false">
        @if (optionItems != null)
        {
            @foreach (var optionItem in optionItems)
            {
                <MudSelectItem T="string" Value="@optionItem.Id">@optionItem.Display</MudSelectItem>
            }
        }
    </MudSelect>
}
else
{
    <MudTooltip Text="@SearchItem.Tooltip" Arrow="true" Placement="Placement.Top">
        <MudSelect  T="string" @bind-Value="PropertyValue" Label="@SearchItem.Label" 
                    Style="@style" SelectedValuesChanged="OnValueChanged"
                    Variant="Variant.Text" FullWidth=true Margin="Margin.Dense" 
                    AnchorOrigin="Origin.BottomCenter" MultiSelection="false">
            @if (optionItems != null)
            {
                @foreach (var optionItem in optionItems)
                {
                    <MudSelectItem T="string" Value="@optionItem.Id">@optionItem.Display</MudSelectItem>
                }
            }
        </MudSelect>
    </MudTooltip>
}
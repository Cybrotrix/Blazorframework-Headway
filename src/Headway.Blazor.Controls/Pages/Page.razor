@using System

@page "/Page/{Config}/{Id:int?}"
@page "/Page/{Config}/{DataArgs?}"
@inherits PageBase
<AuthorizeView>
    <Authorized Context="page">
        @if (config == null)
        {
            <Loading Message="Loading..."/>
        }
        else
        {
            @RenderView()
        }
    </Authorized>
    <NotAuthorized>
        <LoginMessage/>
    </NotAuthorized>
</AuthorizeView>